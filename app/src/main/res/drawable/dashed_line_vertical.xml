<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="90"
            android:toDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <stroke
                    android:width="1dp"
                    android:color="#000000"
                    android:dashWidth="10dp"
                    android:dashGap="5dp" />
            </shape>
        </rotate>
    </item>
</layer-list>
